<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@mipmap/ic_launcher" android:id="@+id/civLatestMessage"/>
    <TextView
            android:text="Name of User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserLatestMessage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/civLatestMessage" android:layout_marginStart="16dp"
            android:textStyle="bold" android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tvLatestMessage"
            app:layout_constraintVertical_chainStyle="packed" android:layout_marginBottom="12dp"
    />
    <TextView
            android:text="latest Message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvLatestMessage"
            app:layout_constraintTop_toBottomOf="@+id/tvUserLatestMessage"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/civLatestMessage"
            android:layout_marginStart="16dp" android:textSize="18sp"/>

</android.support.constraint.ConstraintLayout>