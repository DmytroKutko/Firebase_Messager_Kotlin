<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@android:color/holo_green_dark">
    <TextView
            android:text="Already have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvAlreadyHaveAnAccount"
            app:layout_constraintStart_toStartOf="@+id/btnRegister" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/btnRegister"
            app:layout_constraintTop_toBottomOf="@+id/btnRegister"
            android:textColor="@color/common_google_signin_btn_text_dark_default" android:textSize="16sp"
            android:clickable="true"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etUsernameRegister" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Name"
            android:background="@color/common_google_signin_btn_text_dark_default" android:paddingLeft="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etEmailRegister"
            app:layout_constraintEnd_toEndOf="@+id/etUsernameRegister"
            app:layout_constraintStart_toStartOf="@+id/etUsernameRegister"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/etUsernameRegister"
            android:hint="Email"
            android:background="@color/common_google_signin_btn_text_dark_default" android:paddingLeft="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etPasswordRegister" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etEmailRegister"
            app:layout_constraintStart_toStartOf="@+id/etEmailRegister"
            app:layout_constraintEnd_toEndOf="@+id/etEmailRegister" android:hint="Password"
            android:background="@color/common_google_signin_btn_text_dark_default" android:paddingLeft="16dp"/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegister" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etPasswordRegister"
            app:layout_constraintEnd_toEndOf="@+id/etPasswordRegister"
            app:layout_constraintStart_toStartOf="@+id/etPasswordRegister"
    />
</android.support.constraint.ConstraintLayout>